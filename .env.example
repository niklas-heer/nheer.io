# Hardcover API - Get your token from https://hardcover.app/account/api
HARDCOVER_API_TOKEN=your_token_here

# Pocket Casts - Your login credentials (requires Pocket Casts Plus for web player access)
POCKETCASTS_EMAIL=your_email_here
POCKETCASTS_PASSWORD=your_password_here

# Neon Postgres - Connection string from https://console.neon.tech
DATABASE_URL=postgres://user:password@host/database?sslmode=require

# OpenRouter API - Get your key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_key_here

# GitHub API - Create a fine-grained PAT at https://github.com/settings/tokens?type=beta
# Only needs: Public repositories (read-only)
GITHUB_TOKEN=github_pat_your_token_here
