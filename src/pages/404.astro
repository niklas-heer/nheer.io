---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
  <div class="flex flex-col items-center justify-center py-16 text-center">
    <h1 class="text-6xl font-bold text-accent mb-4">404</h1>
    <p class="text-xl text-muted mb-8">Page not found</p>
    <p class="text-muted mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a href="/" class="text-accent hover:underline">
      &larr; Back to home
    </a>
  </div>
</BaseLayout>
