<style>
    .about-hero {
        position: relative;
        text-align: center;
        padding: 2rem 0 3rem;
    }

    .hero-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 400px;
        height: 400px;
        background: radial-gradient(
            circle,
            color-mix(in srgb, var(--color-accent) 20%, transparent) 0%,
            color-mix(in srgb, var(--color-pink) 10%, transparent) 40%,
            transparent 70%
        );
        filter: blur(60px);
        pointer-events: none;
        z-index: -1;
    }

    .about-image-container {
        position: relative;
        display: inline-block;
        margin-bottom: 1.5rem;
    }

    .about-image {
        width: 160px;
        height: 160px;
        object-fit: contain;
        filter: drop-shadow(
                0 0 20px
                    color-mix(in srgb, var(--color-accent) 60%, transparent)
            )
            drop-shadow(
                0 0 40px color-mix(in srgb, var(--color-pink) 40%, transparent)
            );
        animation: glow-pulse 4s ease-in-out infinite;
    }

    @keyframes glow-pulse {
        0%,
        100% {
            filter: drop-shadow(
                    0 0 15px
                        color-mix(in srgb, var(--color-accent) 50%, transparent)
                )
                drop-shadow(
                    0 0 30px
                        color-mix(in srgb, var(--color-pink) 30%, transparent)
                );
        }
        50% {
            filter: drop-shadow(
                    0 0 25px
                        color-mix(in srgb, var(--color-accent) 70%, transparent)
                )
                drop-shadow(
                    0 0 50px
                        color-mix(in srgb, var(--color-pink) 50%, transparent)
                );
        }
    }

    .about-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: linear-gradient(
            135deg,
            var(--color-foreground) 0%,
            var(--color-accent) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .about-tagline {
        color: var(--color-muted);
        font-size: 1.1rem;
    }

    .about-content {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
    }

    .about-section {
        padding: 1.5rem;
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 1rem;
    }

    .glass-card {
        background: linear-gradient(
            135deg,
            color-mix(in srgb, var(--color-accent) 8%, var(--color-surface)),
            color-mix(in srgb, var(--color-pink) 5%, var(--color-surface))
        );
    }

    .intro-text {
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    .about-section p {
        color: var(--color-foreground);
        line-height: 1.7;
        margin-bottom: 1rem;
    }

    .about-section p:last-child {
        margin-bottom: 0;
    }

    .about-section a {
        color: var(--color-accent);
        text-decoration: none;
        background: color-mix(in srgb, var(--color-accent) 15%, transparent);
        padding: 0.1rem 0.5rem;
        border-radius: 9999px;
        transition: all 0.2s ease;
    }

    .about-section a:hover {
        background: color-mix(in srgb, var(--color-accent) 30%, transparent);
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: var(--color-foreground);
    }

    .section-icon {
        font-size: 1.5rem;
    }

    /* Timeline */
    .timeline {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .timeline-company {
        background: var(--color-background);
        border-radius: 0.75rem;
        padding: 1.25rem;
    }

    .company-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .company-logo {
        width: 40px;
        height: 40px;
        border-radius: 0.5rem;
    }

    .company-header h3 {
        font-weight: 600;
        color: var(--color-foreground);
    }

    .company-header h3 a {
        background: none !important;
        padding: 0 !important;
    }

    .company-period {
        font-size: 0.875rem;
        color: var(--color-muted);
    }

    .timeline-roles {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        padding-left: 1rem;
        border-left: 2px solid var(--color-border);
    }

    .role {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        position: relative;
    }

    .role-dot {
        width: 10px;
        height: 10px;
        background: var(--color-border);
        border-radius: 50%;
        flex-shrink: 0;
        margin-left: -1.35rem;
        margin-top: 0.25rem;
    }

    .role.current .role-dot {
        background: var(--color-green);
        box-shadow: 0 0 10px var(--color-green);
    }

    .role-content {
        display: flex;
        flex-direction: column;
    }

    .role-title {
        font-weight: 500;
        color: var(--color-foreground);
    }

    .role-period {
        font-size: 0.75rem;
        color: var(--color-muted);
    }

    .timeline-item {
        display: flex;
        gap: 1rem;
        padding-left: 1rem;
    }

    .timeline-dot {
        width: 10px;
        height: 10px;
        background: var(--color-border);
        border-radius: 50%;
        flex-shrink: 0;
        margin-top: 0.35rem;
    }

    .timeline-content h3 {
        font-weight: 500;
