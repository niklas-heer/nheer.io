<style>
  /* Hero Section */
  .hero-section {
    position: relative;
    padding: 3rem 0 4rem;
    text-align: center;
  }

  .hero-glow {
    position: fixed;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(
      circle,
      color-mix(in srgb, var(--color-accent) 15%, transparent) 0%,
      color-mix(in srgb, var(--color-pink) 8%, transparent) 30%,
      transparent 60%
    );
    filter: blur(80px);
    pointer-events: none;
    animation: pulse 8s ease-in-out infinite;
    z-index: -1;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.8; transform: translate(-50%, -50%) scale(1.1); }
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero-image-container {
    position: relative;
    display: inline-block;
    margin-bottom: 1.5rem;
  }

  .hero-image {
    width: 140px;
    height: 140px;
    object-fit: contain;
    filter: drop-shadow(0 0 20px color-mix(in srgb, var(--color-accent) 60%, transparent))
            drop-shadow(0 0 40px color-mix(in srgb, var(--color-pink) 40%, transparent));
    animation: glow-pulse 4s ease-in-out infinite;
  }

  @keyframes glow-pulse {
    0%, 100% {
      filter: drop-shadow(0 0 15px color-mix(in srgb, var(--color-accent) 50%, transparent))
              drop-shadow(0 0 30px color-mix(in srgb, var(--color-pink) 30%, transparent));
    }
    50% {
      filter: drop-shadow(0 0 25px color-mix(in srgb, var(--color-accent) 70%, transparent))
              drop-shadow(0 0 50px color-mix(in srgb, var(--color-pink) 50%, transparent));
    }
  }

  .hero-title {
    margin-bottom: 0.75rem;
  }

  .hero-greeting {
    display: block;
    font-size: 1.1rem;
    font-weight: 400;
    color: var(--color-muted);
    margin-bottom: 0.25rem;
  }

  .hero-name {
    display: block;
    font-size: 2.75rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-foreground) 0%, var(--color-accent) 50%, var(--color-pink) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-tagline {
    font-size: 1.25rem;
    color: var(--color-muted);
    margin-bottom: 1.5rem;
  }

  .hero-badges {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .badge {
    padding: 0.375rem 1rem;
    background: color-mix(in srgb, var(--color-accent) 15%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-accent) 30%, transparent);
    border-radius: 9999px;
    font-size: 0.875rem;
    color: var(--color-accent);
    transition: all 0.2s ease;
  }

  .badge:hover {
    background: color-mix(in srgb, var(--color-accent) 25%, transparent);
    transform: translateY(-2px);
  }

  .hero-socials {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .hero-socials a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-surface);
    color: var(--color-muted);
    transition: all 0.2s ease;
  }

  .hero-socials a:hover {
    background: var(--color-accent);
    color: var(--color-background);
    transform: translateY(-3px);
    box-shadow: 0 10px 20px color-mix(in srgb, var(--color-accent) 30%, transparent);
  }

  /* Bento Grid */
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-top: 2rem;
  }

  @media (max-width: 640px) {
    .bento-grid {
      grid-template-columns: 1fr;
    }
  }

  .bento-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    padding: 1.25rem;
    transition: all 0.3s ease;
  }

  .bento-card:hover {
    border-color: color-mix(in srgb, var(--color-accent) 50%, transparent);
    transform: translateY(-2px);
    box-shadow: 0 10px 40px color-mix(in srgb, var(--color-accent) 10%, transparent);
  }

  .bento-large {
    grid-column: span 2;
  }

  @media (max-width: 640px) {
    .bento-large {
      grid-column: span 1;
    }
  }

  .bento-wide {
    grid-column: span 2;
  }

  @media (max-width: 640px) {
    .bento-wide {
      grid-column: span 1;
    }
  }

  .glass-card {
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-accent) 10%, var(--color-surface)),
      color-mix(in srgb, var(--color-pink) 5%, var(--color-surface))
    );
  }

  .bento-card-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .bento-card-header h2 {
    font-size: 1rem;
    font-weight: 600;
    flex: 1;
  }

  .bento-icon {
    font-size: 1.25rem;
  }

  .bento-link {
    font-size: 0.875rem;
    color: var(--color-accent);
  }

  .bento-card-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .bento-post {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background: var(--color-background);
    border-radius: 0.5rem;
    transition: all 0.2s ease;
  }

  .bento-post:hover {
    background: color-mix(in srgb, var(--color-accent) 10%, var(--color-background));
  }

  .bento-post-title {
    font-weight: 500;
    color: var(--color-foreground);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .bento-post-icon {
    flex-shrink: 0;
  }

  .bento-post-date {
    font-size: 0.75rem;
    color: var(--color-muted);
  }

  .bento-text {
    font-size: 0.9rem;
    color: var(--color-muted);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .bento-cta {
    font-size: 0.875rem;
    color: var(--color-accent);
    font-weight: 500;
  }

  .bento-books {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .bento-book img {
    width: 60px;
    height: 90px;
    object-fit: cover;
    border-radius: 0.375rem;
    transition: transform 0.2s ease;
  }

  .bento-book:hover img {
    transform: scale(1.05);
  }

  .bento-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
    color: var(--color-muted);
  }

  .status-dot {
    width: 8px;
    height: 8px;
    background: var(--color-green);
    border-radius: 50%;
    animation: blink 2s ease-in-out infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .bento-current {
    font-size: 1rem;
    color: var(--color-foreground);
    line-height: 1.6;
  }
</style>
