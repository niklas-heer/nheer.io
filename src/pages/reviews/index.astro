---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BookRating from '../../components/BookRating.astro';
import { getCollection } from 'astro:content';

const allReviews = await getCollection('reviews', ({ data }) => !data.draft);

// Sort by date descending
const sortedReviews = allReviews.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Group reviews by year
const reviewsByYear = sortedReviews.reduce((acc, review) => {
  const year = new Date(review.data.date).getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(review);
  return acc;
}, {} as Record<number, typeof sortedReviews>);

const years = Object.keys(reviewsByYear).map(Number).sort((a, b) => b - a);

function getReviewUrl(review: typeof sortedReviews[0]): string {
  return `/reviews/${review.slug}/`;
}
---

<BaseLayout title="Reviews" description="Book reviews and reading list by Niklas Heer">
  <div class="page-header">
    <h1 class="page-title" style="view-transition-name: page-title;">Reviews</h1>
    <p class="page-subtitle">Reviews and notes from my reading journey</p>
  </div>

  <div class="reviews-container">
    {years.map((year) => (
      <section class="year-section">
        <div class="year-label">
          <span>{year}</span>
        </div>
        <div class="reviews-grid">
          {reviewsByYear[year].map((review) => (
            <a href={getReviewUrl(review)} class="review-card">
              <div class="review-cover">
                {review.data.bookCover && (
                  <img
                    src={review.data.bookCover}
                    alt={`Cover of ${review.data.title}`}
                  />
                )}
                <div class="review-rating">
                  <BookRating rating={review.data.rating} />
                </div>
              </div>
              <div class="review-info">
                <h3 class="review-title">{review.data.title}</h3>
                {review.data.bookAuthor && (
                  <p class="review-author">by {review.data.bookAuthor}</p>
                )}
                {review.data.tool && (
                  <span class="review-tool">{review.data.tool}</span>
                )}
              </div>
            </a>
          ))}
        </div>
      </section>
    ))}
  </div>

  {years.length === 0 && (
    <p class="text-muted">No reviews yet.</p>
  )}
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, var(--color-foreground) 0%, var(--color-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-subtitle {
    color: var(--color-muted);
    font-size: 1.1rem;
  }

  .reviews-container {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .year-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .year-label span {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: color-mix(in srgb, var(--color-accent) 15%, transparent);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-accent);
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: 1.5rem;
  }

  .review-card {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .review-card:hover {
    border-color: color-mix(in srgb, var(--color-accent) 50%, transparent);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px color-mix(in srgb, var(--color-accent) 15%, transparent);
  }

  .review-cover {
    position: relative;
    aspect-ratio: 2/3;
    overflow: hidden;
  }

  .review-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .review-card:hover .review-cover img {
    transform: scale(1.05);
  }

  .review-rating {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 0.5rem;
    background: linear-gradient(to top, var(--color-background), transparent);
    display: flex;
    justify-content: center;
  }

  .review-info {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .review-title {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--color-foreground);
    line-height: 1.3;
  }

  .review-author {
    font-size: 0.75rem;
    color: var(--color-muted);
  }

  .review-tool {
    display: inline-block;
    margin-top: 0.5rem;
    padding: 0.125rem 0.5rem;
    background: var(--color-background);
    border-radius: 9999px;
    font-size: 0.625rem;
    color: var(--color-muted);
    text-transform: capitalize;
    width: fit-content;
  }
</style>
