---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import { fetchGitHubData, getLanguageColor } from "../utils/github";

const githubData = await fetchGitHubData();
const pinnedRepos = githubData?.pinnedRepos || [];

// Calculate total stars across pinned repos
const totalStars = pinnedRepos.reduce(
    (sum, repo) => sum + repo.stargazerCount,
    0,
);
const totalForks = pinnedRepos.reduce((sum, repo) => sum + repo.forkCount, 0);

// Format join date
const joinDate = githubData?.createdAt
    ? new Date(githubData.createdAt).toLocaleDateString("en-US", {
          month: "short",
          year: "numeric",
      })
    : null;
---

<BaseLayout
    title="Projects"
    description="Open source projects and side projects by Niklas Heer"
>
    <h1
        class="text-3xl font-bold mb-2"
        style="view-transition-name: page-title;"
    >
        Projects
    </h1>
    <p class="text-muted mb-8">
        Open source projects I've built and maintain. Find me on <a
            href="https://github.com/niklas-heer"
            target="_blank"
            rel="noopener">GitHub</a
        >.
    </p>

    {
        !githubData && (
            <div class="text-muted italic">
                GitHub data unavailable. Check back later!
            </div>
        )
    }

    {
        githubData && (
            <section class="mb-12">
                {/* Stats Row */}
                <div class="stats-row">
                    <a
                        href={`https://github.com/${githubData.username}`}
                        target="_blank"
                        rel="noopener"
                        class="profile-link"
                    >
                        <img
                            src={githubData.avatarUrl}
                            alt={githubData.username}
                            class="profile-avatar-small"
                        />
                        <span>@{githubData.username}</span>
                        <svg
                            class="external-icon"
                            width="14"
                            height="14"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                            />
                        </svg>
                    </a>
                    <span class="stats-divider" />
                    <div class="stat-inline">
                        <svg
                            viewBox="0 0 16 16"
                            fill="currentColor"
                            class="stat-icon"
                        >
                            <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Z" />
                        </svg>
                        <span class="stat-value">{totalStars}</span>
                        <span class="stat-label">stars</span>
                    </div>
                    <div class="stat-inline">
                        <svg
                            viewBox="0 0 16 16"
                            fill="currentColor"
                            class="stat-icon"
                        >
                            <path d="M2 2.5A2.5 2.5 0 0 1 4.5 0h8.75a.75.75 0 0 1 .75.75v12.5a.75.75 0 0 1-.75.75h-2.5a.75.75 0 0 1 0-1.5h1.75v-2h-8a1 1 0 0 0-.714 1.7.75.75 0 1 1-1.072 1.05A2.495 2.495 0 0 1 2 11.5Zm10.5-1h-8a1 1 0 0 0-1 1v6.708A2.486 2.486 0 0 1 4.5 9h8ZM5 12.25a.25.25 0 0 1 .25-.25h3.5a.25.25 0 0 1 .25.25v3.25a.25.25 0 0 1-.4.2l-1.45-1.087a.249.249 0 0 0-.3 0L5.4 15.7a.25.25 0 0 1-.4-.2Z" />
                        </svg>
                        <span class="stat-value">{githubData.publicRepos}</span>
                        <span class="stat-label">repos</span>
                    </div>
                    {joinDate && (
                        <>
                            <span class="stats-divider" />
                            <div class="stat-inline">
                                <svg
                                    viewBox="0 0 16 16"
                                    fill="currentColor"
                                    class="stat-icon"
                                >
                                    <path d="M4.75 0a.75.75 0 0 1 .75.75V2h5V.75a.75.75 0 0 1 1.5 0V2h1.25c.966 0 1.75.784 1.75 1.75v10.5A1.75 1.75 0 0 1 13.25 16H2.75A1.75 1.75 0 0 1 1 14.25V3.75C1 2.784 1.784 2 2.75 2H4V.75A.75.75 0 0 1 4.75 0ZM2.5 7.5v6.75c0 .138.112.25.25.25h10.5a.25.25 0 0 0 .25-.25V7.5Zm10.75-4H2.75a.25.25 0 0 0-.25.25V6h11V3.75a.25.25 0 0 0-.25-.25Z" />
                                </svg>
                                <span class="stat-label">
                                    Joined {joinDate}
                                </span>
                            </div>
                        </>
                    )}
                </div>

                {/* Contribution Graph */}
                <div class="contribution-graph">
                    <Image
                        src={`https://ghchart.rshah.org/a855f7/${githubData.username}`}
                        alt="GitHub contribution graph"
                        width={722}
                        height={112}
                        class="contribution-img"
                    />
                </div>

                {/* Pinned Repositories */}
                <h2 class="section-title">
                    <span class="section-icon">ðŸ“Œ</span>
                    Pinned Repositories
                </h2>

                <div class="repos-grid">
                    {pinnedRepos.map((repo) => (
                        <a
                            href={repo.url}
                            target="_blank"
                            rel="noopener"
                            class="repo-card"
                        >
                            <div class="repo-header">
                                <svg
                                    class="repo-icon"
                                    viewBox="0 0 16 16"
                                    fill="currentColor"
                                >
                                    <path d="M2 2.5A2.5 2.5 0 0 1 4.5 0h8.75a.75.75 0 0 1 .75.75v12.5a.75.75 0 0 1-.75.75h-2.5a.75.75 0 0 1 0-1.5h1.75v-2h-8a1 1 0 0 0-.714 1.7.75.75 0 1 1-1.072 1.05A2.495 2.495 0 0 1 2 11.5Zm10.5-1h-8a1 1 0 0 0-1 1v6.708A2.486 2.486 0 0 1 4.5 9h8ZM5 12.25a.25.25 0 0 1 .25-.25h3.5a.25.25 0 0 1 .25.25v3.25a.25.25 0 0 1-.4.2l-1.45-1.087a.249.249 0 0 0-.3 0L5.4 15.7a.25.25 0 0 1-.4-.2Z" />
                                </svg>
                                <span class="repo-name">{repo.name}</span>
                            </div>

                            {repo.description && (
                                <p class="repo-description">
                                    {repo.description}
                                </p>
                            )}

                            <div class="repo-meta">
                                {repo.primaryLanguage && (
                                    <span class="repo-language">
                                        <span
                                            class="language-dot"
                                            style={`background-color: ${getLanguageColor(repo.primaryLanguage.name, repo.primaryLanguage.color)}`}
                                        />
                                        {repo.primaryLanguage.name}
                                    </span>
                                )}

                                {repo.stargazerCount > 0 && (
                                    <span class="repo-stat">
                                        <svg
                                            viewBox="0 0 16 16"
                                            fill="currentColor"
                                        >
                                            <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Z" />
                                        </svg>
                                        {repo.stargazerCount}
                                    </span>
                                )}

                                {repo.forkCount > 0 && (
                                    <span class="repo-stat">
                                        <svg
                                            viewBox="0 0 16 16"
                                            fill="currentColor"
                                        >
                                            <path d="M5 5.372v.878c0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75v-.878a2.25 2.25 0 1 1 1.5 0v.878a2.25 2.25 0 0 1-2.25 2.25h-1.5v2.128a2.251 2.251 0 1 1-1.5 0V8.5h-1.5A2.25 2.25 0 0 1 3.5 6.25v-.878a2.25 2.25 0 1 1 1.5 0ZM5 3.25a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Zm6.75.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm-3 8.75a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Z" />
                                        </svg>
                                        {repo.forkCount}
                                    </span>
                                )}
                            </div>
                        </a>
                    ))}
                </div>
            </section>
        )
    }
</BaseLayout>

<style>
    a {
        color: var(--color-accent);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    /* Stats Row */
    .stats-row {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
        margin-bottom: 1.5rem;
        padding: 1rem;
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 1rem;
    }

    .profile-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-foreground);
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .profile-link:hover {
        color: var(--color-accent);
        text-decoration: none;
    }

    .profile-avatar-small {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        object-fit: cover;
    }

    .external-icon {
        opacity: 0.5;
    }

    .profile-link:hover .external-icon {
        opacity: 1;
    }

    .stats-divider {
        width: 1px;
        height: 1.5rem;
        background: var(--color-border);
    }

    .stat-inline {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        color: var(--color-muted);
    }

    .stat-icon {
        width: 1rem;
        height: 1rem;
        opacity: 0.7;
    }

    .stat-value {
        font-weight: 600;
        color: var(--color-foreground);
    }

    .stat-label {
        font-size: 0.875rem;
        color: var(--color-muted);
    }

    /* Contribution Graph */
    .contribution-graph {
        margin-bottom: 2rem;
        padding: 1rem;
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 1rem;
        overflow-x: auto;
    }

    .contribution-img {
        display: block;
        width: 100%;
        max-width: 100%;
        height: auto;
    }

    /* Section Title */
    .section-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--color-foreground);
    }

    .section-icon {
        font-size: 1.25rem;
    }

    /* Repos Grid */
    .repos-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    @media (min-width: 640px) {
        .repos-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .repos-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    /* Repo Card */
    .repo-card {
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 1rem;
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .repo-card:hover {
        border-color: var(--color-accent);
        transform: translateY(-2px);
        text-decoration: none;
    }

    .repo-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .repo-icon {
        width: 1rem;
        height: 1rem;
        color: var(--color-muted);
        flex-shrink: 0;
    }

    .repo-name {
        font-weight: 600;
        color: var(--color-accent);
        font-size: 1rem;
    }

    .repo-description {
        font-size: 0.875rem;
        color: var(--color-muted);
        line-height: 1.5;
        flex: 1;
    }

    .repo-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
        margin-top: auto;
    }

    .repo-language {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        font-size: 0.75rem;
        color: var(--color-foreground);
    }

    .language-dot {
        width: 0.75rem;
        height: 0.75rem;
        border-radius: 50%;
        flex-shrink: 0;
    }

    .repo-stat {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.75rem;
        color: var(--color-muted);
    }

    .repo-stat svg {
        width: 0.875rem;
        height: 0.875rem;
    }
</style>
