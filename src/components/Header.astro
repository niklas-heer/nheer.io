---
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
    { name: "Blog", href: "/posts", icon: "blog" },
    { name: "Reading", href: "/reading", icon: "reading" },
    { name: "Podcasts", href: "/podcasts", icon: "podcasts" },
    { name: "Projects", href: "/projects", icon: "projects" },
    { name: "Reviews", href: "/reviews", icon: "reviews" },
    { name: "About", href: "/about", icon: "about" },
];
---

<header class="flex items-center justify-between">
    <a
        href="/"
        class="text-xl font-bold hover:text-accent transition-colors group"
    >
        <span class="terminal-text" style="view-transition-name: site-title;">
            <span class="terminal-prompt">‚ùØ</span>
            <span class="terminal-typed" data-text="nheer"></span>
            <span class="terminal-cursor">_</span>
        </span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden sm:flex items-center gap-6">
        <div class="nav-menu-container">
            <button
                class="nav-menu-trigger text-muted hover:text-foreground transition-colors"
                aria-expanded="false"
                aria-haspopup="true"
            >
                <span>Menu</span>
                <svg
                    class="nav-menu-icon"
                    width="12"
                    height="12"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path d="M6 9l6 6 6-6"></path>
                </svg>
            </button>
            <div class="nav-dropdown">
                {
                    navItems.map((link) => (
                        <a href={link.href} class="nav-dropdown-item">
                            <span class="nav-icon" data-icon={link.icon} />
                            <span>{link.name}</span>
                        </a>
                    ))
                }
            </div>
        </div>

        <div class="flex items-center border-l border-border pl-4">
            <ThemeToggle />
        </div>
    </nav>

    <!-- Mobile Navigation -->
    <div class="flex sm:hidden items-center gap-2">
        <ThemeToggle />
        <button
            id="mobile-menu-button"
            class="p-2 text-muted hover:text-foreground transition-colors"
            aria-label="Toggle menu"
            aria-expanded="false"
        >
            <svg
                class="hamburger-icon w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <svg
                class="close-icon w-6 h-6 hidden"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>
</header>

<!-- Mobile Menu Overlay -->
<nav id="mobile-menu" class="mobile-menu sm:hidden">
    <ul class="flex flex-col gap-2 p-4 bg-background border-b border-border">
        {
            navItems.map((link) => (
                <li>
                    <a
                        href={link.href}
                        class="mobile-nav-link flex items-center gap-3 px-3 py-2 rounded-lg text-muted hover:text-foreground hover:bg-surface transition-all"
                    >
                        <span class="nav-icon" data-icon={link.icon} />
                        <span>{link.name}</span>
                    </a>
                </li>
            ))
        }
    </ul>
</nav>

