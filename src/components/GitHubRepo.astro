---
import { fetchGitHubRepo, getLanguageColor, formatNumber, formatDate } from '../utils/github';

interface Props {
  repo: string;
  showStarHistory?: boolean;
  class?: string;
}

const { repo, showStarHistory = false, class: className } = Astro.props;
const data = await fetchGitHubRepo(repo);
const starHistoryUrl = `https://api.star-history.com/svg?repos=${repo}&type=Date&theme=dark`;
---

{data ? (
  <div class:list={["github-repo-wrapper", className]}>
    <a href={data.html_url} target="_blank" rel="noopener noreferrer" class="github-repo-card">
      <div class="repo-main">
        <div class="repo-header">
          <svg class="github-logo" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" />
          </svg>
          <span class="repo-name">{data.full_name}</span>
        </div>

        {data.description && (
          <p class="repo-description">{data.description}</p>
        )}

        <div class="repo-stats">
          <div class="stat">
            <svg viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
              <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Z" />
            </svg>
            <span class="stat-value">{formatNumber(data.stargazers_count)}</span>
            <span class="stat-label">stars</span>
          </div>

          <div class="stat">
            <svg viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
              <path d="M5 5.372v.878c0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75v-.878a2.25 2.25 0 1 1 1.5 0v.878a2.25 2.25 0 0 1-2.25 2.25h-1.5v2.128a2.251 2.251 0 1 1-1.5 0V8.5h-1.5A2.25 2.25 0 0 1 3.5 6.25v-.878a2.25 2.25 0 1 1 1.5 0ZM5 3.25a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Zm6.75.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm-3 8.75a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Z" />
            </svg>
            <span class="stat-value">{formatNumber(data.forks_count)}</span>
            <span class="stat-label">forks</span>
          </div>

          {data.language && (
            <div class="stat">
              <span class="language-dot" style={`background-color: ${getLanguageColor(data.language)}`}></span>
              <span class="stat-value">{data.language}</span>
            </div>
          )}

          {data.license && (
            <div class="stat">
              <svg viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
                <path d="M8.75.75V2h.985c.304 0 .603.08.867.231l1.29.736c.038.022.08.033.124.033h2.234a.75.75 0 0 1 0 1.5h-.427l2.111 4.692a.75.75 0 0 1-.154.838l-.53-.53.529.531-.001.002-.002.002-.006.006-.006.005-.01.01a.797.797 0 0 1-.116.097 1.35 1.35 0 0 1-.27.152 2.01 2.01 0 0 1-.675.163c-.468.029-.943-.057-1.308-.22a1.904 1.904 0 0 1-.574-.39 1.514 1.514 0 0 1-.298-.398l-.002-.004a.75.75 0 0 1 .2-.9l-.53-.53.529.531a2.77 2.77 0 0 0-.074-.14l-2.111-4.691H8.75V12h3.5a.75.75 0 0 1 0 1.5h-8.5a.75.75 0 0 1 0-1.5h3.5V2H6.5a.75.75 0 0 1 0-1.5h2.25V.75Z" />
              </svg>
              <span class="stat-value">{data.license.spdx_id}</span>
            </div>
          )}
        </div>
      </div>

      <div class="repo-footer">
        <span class="updated">Updated {formatDate(data.updated_at)}</span>
        <span class="view-link">View on GitHub â†’</span>
      </div>
    </a>

    {showStarHistory && (
      <div class="star-history">
        <a href={`https://star-history.com/#${repo}&Date`} target="_blank" rel="noopener noreferrer">
          <img
            src={starHistoryUrl}
            alt={`Star history chart for ${repo}`}
            loading="lazy"
          />
        </a>
      </div>
    )}
  </div>
) : (
  <div class="github-repo-wrapper github-repo-error">
    <p>Could not load repository: {repo}</p>
  </div>
)}

<style>
  .github-repo-wrapper {
    margin: 1.5rem 0;
  }

  .github-repo-card {
    display: block;
    padding: 1.25rem 1.5rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .github-repo-card:hover {
    border-color: var(--color-muted);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .repo-main {
    margin-bottom: 1rem;
  }

  .repo-header {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    margin-bottom: 0.625rem;
  }

  .github-logo {
    width: 20px;
    height: 20px;
    color: var(--color-text);
    flex-shrink: 0;
  }

  .repo-name {
    font-weight: 600;
    color: var(--color-primary);
    font-size: 1.125rem;
  }

  .repo-description {
    color: var(--color-text);
    font-size: 0.9375rem;
    line-height: 1.6;
    margin: 0 0 1rem 0;
    opacity: 0.9;
  }

  .repo-stats {
    display: flex;
    flex-wrap: wrap;
    gap: 1.25rem;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--color-muted);
  }

  .stat svg {
    width: 16px;
    height: 16px;
    opacity: 0.8;
  }

  .stat-value {
    font-weight: 500;
    color: var(--color-text);
  }

  .stat-label {
    opacity: 0.7;
  }

  .language-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .repo-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
    font-size: 0.8125rem;
    color: var(--color-muted);
  }

  .view-link {
    color: var(--color-primary);
    font-weight: 500;
  }

  .github-repo-card:hover .view-link {
    text-decoration: underline;
  }

  .star-history {
    margin-top: 1rem;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--color-border);
    background: var(--color-surface);
  }

  .star-history a {
    display: block;
  }

  .star-history img {
    width: 100%;
    height: auto;
    display: block;
  }

  .github-repo-error {
    color: var(--color-muted);
    font-style: italic;
    padding: 1rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 12px;
  }

  .github-repo-error p {
    margin: 0;
  }

  @media (max-width: 600px) {
    .repo-stats {
      gap: 1rem;
    }

    .repo-footer {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
