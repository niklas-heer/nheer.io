---
import { fetchGitHubRepo, getLanguageColor, formatNumber, formatDate } from '../utils/github';

interface Props {
  repo: string;
  class?: string;
}

const { repo, class: className } = Astro.props;
const data = await fetchGitHubRepo(repo);
---

{data ? (
  <a href={data.html_url} target="_blank" rel="noopener noreferrer" class:list={["github-repo-card", className]}>
    <div class="repo-header">
      <svg class="github-logo" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" />
      </svg>
      <span class="repo-name">{data.full_name}</span>
    </div>

    {data.description && (
      <p class="repo-description">{data.description}</p>
    )}

    <div class="repo-meta">
      <span class="repo-stat">
        <svg viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
          <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Z" />
        </svg>
        {formatNumber(data.stargazers_count)}
      </span>

      <span class="repo-stat">
        <svg viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
          <path d="M5 5.372v.878c0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75v-.878a2.25 2.25 0 1 1 1.5 0v.878a2.25 2.25 0 0 1-2.25 2.25h-1.5v2.128a2.251 2.251 0 1 1-1.5 0V8.5h-1.5A2.25 2.25 0 0 1 3.5 6.25v-.878a2.25 2.25 0 1 1 1.5 0ZM5 3.25a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Zm6.75.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm-3 8.75a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Z" />
        </svg>
        {formatNumber(data.forks_count)}
      </span>

      {data.language && (
        <span class="repo-stat">
          <span class="language-dot" style={`background-color: ${getLanguageColor(data.language)}`}></span>
          {data.language}
        </span>
      )}

      {data.license && (
        <span class="repo-stat">
          <svg viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
            <path d="M8.75.75V2h.985c.304 0 .603.08.867.231l1.29.736c.038.022.08.033.124.033h2.234a.75.75 0 0 1 0 1.5h-.427l2.111 4.692a.75.75 0 0 1-.154.838l-.53-.53.529.531-.001.002-.002.002-.006.006-.006.005-.01.01a.797.797 0 0 1-.116.097 1.35 1.35 0 0 1-.27.152 2.01 2.01 0 0 1-.675.163c-.468.029-.943-.057-1.308-.22a1.904 1.904 0 0 1-.574-.39 1.514 1.514 0 0 1-.298-.398l-.002-.004a.75.75 0 0 1 .2-.9l-.53-.53.529.531a2.77 2.77 0 0 0-.074-.14l-2.111-4.691H8.75V12h3.5a.75.75 0 0 1 0 1.5h-8.5a.75.75 0 0 1 0-1.5h3.5V2H6.5a.75.75 0 0 1 0-1.5h2.25V.75Z" />
          </svg>
          {data.license.spdx_id}
        </span>
      )}

      <span class="repo-updated">
        Updated {formatDate(data.updated_at)}
      </span>
    </div>
  </a>
) : (
  <div class="github-repo-card github-repo-error">
    <p>Could not load repository: {repo}</p>
  </div>
)}

<style>
  .github-repo-card {
    display: block;
    padding: 1.25rem;
    margin: 1.5rem 0;
    background: linear-gradient(135deg, var(--color-surface) 0%, color-mix(in srgb, var(--color-surface) 95%, var(--color-primary) 5%) 100%);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  .github-repo-card:hover {
    border-color: color-mix(in srgb, var(--color-primary) 50%, transparent);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px);
  }

  .repo-header {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    margin-bottom: 0.5rem;
  }

  .github-logo {
    width: 22px;
    height: 22px;
    color: var(--color-text);
    flex-shrink: 0;
  }

  .repo-name {
    font-weight: 600;
    color: var(--color-primary);
    font-size: 1.125rem;
  }

  .repo-description {
    color: var(--color-text);
    font-size: 0.9375rem;
    line-height: 1.6;
    margin: 0 0 1rem 0;
    opacity: 0.85;
  }

  .repo-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    font-size: 0.8125rem;
    color: var(--color-muted);
  }

  .repo-stat {
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }

  .repo-stat svg {
    width: 15px;
    height: 15px;
    opacity: 0.7;
  }

  .language-dot {
    width: 11px;
    height: 11px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .repo-updated {
    margin-left: auto;
    opacity: 0.7;
  }

  .github-repo-error {
    color: var(--color-muted);
    font-style: italic;
  }

  .github-repo-error p {
    margin: 0;
  }

  @media (max-width: 600px) {
    .repo-meta {
      gap: 0.75rem;
    }

    .repo-updated {
      margin-left: 0;
      width: 100%;
      margin-top: 0.5rem;
    }
  }
</style>
